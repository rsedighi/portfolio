<div class="jumbotron">
<div class="container">
<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th><h4>Title</h4></th>
      <th><h4>Content</h4></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <% if post.published? || policy(post).index? %>
      <tr id="<%= dom_id(post)%>">
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %>
        <% if current_user && policy(post).update? %>|</td>
        <td><%= link_to 'Edit', edit_post_path(post) %>|</td>
          <% end %>
        <% if current_user && policy(post).destroy? %>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
     <% end %>
    <% end %>
  </tbody>
</table>
  <% if current_user %>
  <p><%= link_to 'New Post', new_post_path, class: "btn btn-primary btn-lg", role: "button", id: "new_post", remote: true %>
  <% end %>
</div>
</div>
