<div class="jumbotron">
  <div class="container">
    <h1>My Projects</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th><h4>Title</h4></th>
          <th><h4>Content</h4></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
        <tr id="<%= dom_id(project) %>">
          <td><%= project.title %></td>
          <td><%= project.technologies_used %></td>
          <td><%= link_to 'Show', project %></td>
          <% if current_user %>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </div>
      </div>
      <% end %>
    </tbody>
  </table>
  <% if current_user %>
  <p><%= link_to 'New Project', new_project_path, class: "btn btn-primary btn-lg", role: "button", id: "new_project", remote: true %>    <% end %>
  </div>
</div>
</div>
